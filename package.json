  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf node_modules package-lock.json",
    "reset-data": "rm -f messages.json keys.json && echo 'Data files reset'",
    "backup": "cp messages.json messages.backup.json && cp keys.json keys.backup.json && echo 'Backup created'"
  },
  "keywords": [
    "chat",
    "romantic",
    "encrypted",
    "end-to-end-encryption",
    "socket.io",
    "express",
    "love",
    "secure-messaging",
    "private-chat",
    "couples"
  ],
  "author": {
    "name": "Azz",
