  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/romantic-encrypted-chat.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/romantic-encrypted-chat/issues"
  },
  "homepage": "https://github.com/yourusername/romantic-encrypted-chat#readme",
  "config": {
    "port": "80",
    "max_users": "2",
    "message_expiry_hours": "24",
    "max_file_size": "50MB"
  },
  "metadata": {
    "theme": "romantic",
    "encryption": "end-to-end",
    "features": [
      "Real-time messaging",
      "End-to-end encryption",
      "File sharing",
      "Media support",
      "Message expiry",
      "User authorization",
      "Typing indicators",
      "Mobile responsive"
    ],
    "supported_files": [
      "images (jpg, jpeg, png, gif)",
      "videos (mp4, mov, avi, webm)",
      "audio (mp3, wav, ogg, m4a)",
      "documents (pdf, doc, docx, txt)"
    ]
  }
}
